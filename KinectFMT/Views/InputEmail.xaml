<Window x:Class="KinectFMT.Views.InputEmail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectFMT.Views"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="InputEmail" Height="160" Width="700"
        WindowStartupLocation="CenterScreen" Background="Azure">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{DynamicResource InputEmail}" HorizontalAlignment="Center" FontSize="26"></TextBlock>
        <TextBox x:Name="InputBox" FontSize="30" Margin="10" TextAlignment="Center"></TextBox>
        <Button HorizontalAlignment="Stretch" Height="45" Background="SkyBlue" Width="470" Content="OK" FontSize="26" IsDefault="True" Click="EnterClick"></Button>
    </StackPanel>
</Window>
